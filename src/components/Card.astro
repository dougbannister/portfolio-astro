---
export interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<div class="card shadow">
  <div class="card-img" style="background-image: url(img/placeholder-social.jpg)">
  </div>
  <div class="card-text">
    <h3>
      {title}
      <span>&rarr;</span>
    </h3>
  </div>
  <a href={href} title={title}><span></span></a>
</div>
<style>
  .card {
    border-radius: 15px;
    flex: 0 1 100%;
    margin: 0 0 3rem 0;
    position: relative;
  }

  .card-text {
    padding: 20px;
  }

  .card-img {
    width: 100%;
    height: 300px;
    border-radius: 15px 15px 0 0;
    background-position: center;
    background-size: cover;
    background-color: #aaaaaa;
  }

  .card a span {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .shadow {
    -webkit-box-shadow: 0 13px 27px -5px rgba(50, 50, 93, 0.25),
      0 8px 16px -8px rgba(0, 0, 0, 0.3), 0 -6px 16px -6px rgba(0, 0, 0, 0.025);
    box-shadow: 0 13px 27px -5px rgba(50, 50, 93, 0.25),
      0 8px 16px -8px rgba(0, 0, 0, 0.3), 0 -6px 16px -6px rgba(0, 0, 0, 0.025);
    -webkit-transition-property: -webkit-box-shadow, -webkit-transform;
    transition-property: box-shadow, transform;
    -webkit-transition-duration: 0.15s;
    transition-duration: 0.15s;
  }

  .shadow:hover,
  .shadow:active {
    -webkit-box-shadow: 0 30px 60px -12px rgba(50, 50, 93, 0.25),
      0 18px 36px -18px rgba(0, 0, 0, 0.3),
      0 -12px 36px -8px rgba(0, 0, 0, 0.025);
    box-shadow: 0 30px 60px -12px rgba(50, 50, 93, 0.25),
      0 18px 36px -18px rgba(0, 0, 0, 0.3),
      0 -12px 36px -8px rgba(0, 0, 0, 0.025);
    -webkit-transform: translateY(-2px);
    transform: rotate(-0.5deg) translateY(-8px);
  }

  @media screen and (min-width: 667px) {
    .card {
      flex: 0 1 48%;
    }
  }
</style>
