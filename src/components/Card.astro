---
export interface Props {
  title: string;
  href: string;
  img: string;
  intro: string
}

const { href, title, intro, img } = Astro.props;
---

<li class="card">
  <a href={href}>
    <img class="shadow" src={img} alt={title} />
      <h3>
        {title}
      </h3>
      <p>
        {intro}
      </p>
  </a>
</li>
<style>
  .card {
    list-style: none;
		display: flex;
  }

  .card > a {
    width: 100%;
		text-decoration: none;
		line-height: 1.4;
  }

  .shadow {
    box-shadow: 0 16px 24px 2px rgb(29 17 51 / 4%), 0 6px 32px 4px rgb(9 32 77 / 12%), 0 8px 12px -5px rgb(29 17 51 / 12%);
  }
</style>
