---
export interface Props {
  href: string;
  target: string;
}

const { href, target } = Astro.props;
---

<a href={href} target={target}><slot /></a>

<style>
  a {
    width: 100%;
    display: inline-block;
    padding: 8px 24px;
    margin: 0 0 1rem;
    font-weight: 500;
    text-align: center;
    border-radius: 69px;
    border: 2px solid #e66bff;
  }
  @media screen and (min-width: 667px) {
    a {
      width: auto;
    }
  }
</style>
